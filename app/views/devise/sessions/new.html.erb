<div class="container w-30-percent-lg">
  <h1 class="title mb-30">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'new_user form-user mb-30'}) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label lowercase' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-text w-100-percent mb-30' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label lowercase' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input-text w-100-percent mb-30' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-30">
      <%= f.submit "Log in", class: 'btn-submit' %>
    </div>
  <% end %>
  <div class="link-form form-user text-undecorated color-green">
    <%= render "devise/shared/links" %>
  </div>
</div>